@model GetInventory
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Depo Listesi</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <h3 class="text-bg-primary">Depo Listesi</h3>
    <div class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-bordered" id="btn-editable">
                                <thead>
                                    <tr>
                                        <th>#</th>

                                        <th>Depo Adı</th>
                                        <th>Durum</th>
                                        <th>Düzenle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model.wareHouses)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.wareHouseName</td>
                                        <td>@item.Status</td>
                                        <td><a href="/WareHouse/EditWareHouse/@item.Id" class="btn btn-success"><b class="text-bg-warning">Düzenle</b></a></td>
                                        <td><a href="/WareHouse/DeleteWareHouse/@item.Id" class="btn btn-danger"><b class="text-bg-warning">Sil</b></a></td>
                                    </tr>
                                }
                            </table>
                            <a asp-controller="WareHouse" asp-action="AddWareHouse" class="btn btn-primary"><b class="text-bg-warning">Yeni Depo Ekle</b></a>
                        </div>

                    </div>
                </div>
                <a asp-controller="Inventory" asp-action="Index" class="btn btn-primary"><b class="text-bg-warning"> Envanter Listesine Git</b></a>
            </div>
        </div>
    </div>
</body>
</html>
